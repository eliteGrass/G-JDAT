<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %40(%logger{40}):%line - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.itsoku" level="debug" />

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>